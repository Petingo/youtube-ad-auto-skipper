{
    "name": "Youtube Ad Auto Skipper",
    "short_name": "Youtube Ad skipper",
    "description": "**This Extension would NOT block any ads.** \n It only helps you click the 'skip ad' button and the 'close' button of an overlay ad.  With this, you won't be bother when listening to music or watching videos.",
    "manifest_version": 2,
    "version": "1.0.0",
    "author": "Petingo",
    "homepage_url": "http://petingo.me",
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "/lib/arrive.min.js",
                "app.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "permissions": [
        "storage"
    ],
    "options_ui": {
        "page": "/options/options.html"
    },
    "icons": {
        "16": "/icon/icon16.png",
        "48": "/icon/icon48.png",
        "128": "/icon/icon128.png"
    }
}