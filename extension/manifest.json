{
    "name": "Youtube Ad Auto Skipper",
    "short_name": "Youtube Ad skipper",
    "description": "This extension helps you click the \"skip\" and \"close\" button of an ad in Youtube.",
    "manifest_version": 2,
    "version": "1.0.0",
    "author": "Petingo",
    "homepage_url": "https://github.com/Petingo/youtube-ad-auto-skipper",
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "/lib/arrive.min.js",
                "app.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "permissions": [
        "storage"
    ],
    "options_ui": {
        "page": "/options/options.html"
    },
    "icons": {
        "16": "/icon/icon16.png",
        "48": "/icon/icon48.png",
        "128": "/icon/icon128.png"
    }
}